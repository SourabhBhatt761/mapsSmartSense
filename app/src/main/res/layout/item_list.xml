<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucknow"
        android:maxWidth="100dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_lat"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lat"
        android:textStyle="bold"
        android:textAlignment="center"
        android:maxWidth="60dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/item_place"
        app:layout_constraintEnd_toStartOf="@id/item_long"
        app:layout_constraintTop_toTopOf="@id/item_place"
        app:layout_constraintBottom_toBottomOf="@id/item_place"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="long"
        android:textStyle="bold"
        android:textAlignment="center"
        android:maxWidth="60dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/item_lat"
        app:layout_constraintTop_toTopOf="@id/item_lat"
        app:layout_constraintEnd_toStartOf="@id/item_time"
        app:layout_constraintTop_toBottomOf="@id/item_lat"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:04"
        app:layout_constraintEnd_toStartOf="@id/guideline11"
        app:layout_constraintStart_toEndOf="@id/item_long"
        app:layout_constraintTop_toTopOf="@id/item_long"
        app:layout_constraintBottom_toBottomOf="@id/item_long"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>


</androidx.constraintlayout.widget.ConstraintLayout>